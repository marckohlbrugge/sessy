<%= render layout: "sources/layout", locals: { source: @source, active: :settings } do %>
  <div class="max-w-lg">
    <%= form_with model: @source do |f| %>
      <% if @source.errors.any? %>
        <div class="mb-4 p-3 border border-red-300 rounded text-sm text-red-600">
          <ul class="list-disc list-inside">
            <% @source.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :name, t("sources.edit.source_name"), class: "block text-sm font-medium mb-1" %>
        <%= f.text_field :name, class: "block w-full border rounded px-3 py-2 text-sm" %>
      </div>

      <div class="mb-4">
        <%= render "color_picker", f: f %>
      </div>

      <div class="mb-4">
        <%= f.label :retention_days, t("sources.edit.delete_events_after"), class: "block text-sm font-medium mb-1" %>
        <div class="flex items-center gap-2">
          <%= f.number_field :retention_days, min: 1, placeholder: t("sources.edit.days_placeholder"), class: "block w-24 border rounded px-3 py-2 text-sm" %>
          <span class="text-sm text-gray-500"><%= t("sources.edit.days") %></span>
        </div>
        <p class="text-xs text-gray-400 mt-1"><%= t("sources.edit.leave_empty") %></p>
      </div>

      <div class="flex justify-between items-center">
        <%= f.submit t("sources.edit.save_changes"), class: "px-3 py-1.5 text-sm border rounded hover:bg-gray-50 cursor-pointer" %>

        <%= button_to t("sources.edit.delete_source"), @source, method: :delete, class: "text-sm text-red-600 hover:underline", data: { confirm: t("sources.edit.confirm_delete") } %>
      </div>
    <% end %>
  </div>
<% end %>
