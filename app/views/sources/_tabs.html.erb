<%
  tabs = [
    { name: t("sources.tabs.overview"), path: source_path(source), key: :overview },
    { name: t("sources.tabs.activity"), path: source_events_path(source), key: :activity },
    { name: t("sources.tabs.setup"), path: source_setup_path(source), key: :setup },
    { name: t("sources.tabs.settings"), path: edit_source_path(source), key: :settings }
  ]
%>

<nav class="flex gap-6 border-b">
  <% tabs.each do |tab| %>
    <%= link_to tab[:name], tab[:path],
        class: "py-2 text-sm border-b-2 -mb-px #{active == tab[:key] ? 'border-current font-medium' : 'border-transparent text-gray-500 hover:text-gray-900'}" %>
  <% end %>
</nav>
